---
layout: layouts/base-post.njk
pagination:
  data: post.posts
  size: 1
  alias: item
permalink: /{{ item.path }}/index.html
---
<div class="content"><h1>{{ item.title }}</h1><div class="date-title">{{ item.pubDate | date }}</div>{{ item['content:encoded'] | safe }}</div>

<div class="sidebar">
<div class="share-page"><a href="https://www.facebook.com/sharer/sharer.php?u=https://україна.live/{{ item.path }}" target="_blank" rel="noreferrer"><img src="/img/facebook.svg"></a></div>

<div class="share-page"><a href="https://twitter.com/intent/tweet?text=https://україна.live/{{ item.path }} {{ item.title }}" class="share-page" target="_blank" rel="noreferrer"><img src="/img/twitter.svg"></a></div>

<div class="item-page" style="margin-top: 50px;"><img src="/img/ads.svg"></div>
</div>

<div class="grid">{% for item in homepost.posts %}<div class="col box"><a class="grid-item" href="/{{ item.path }}">{{ item['content:encoded'] | safe }}<div class="grid-item-content"><div class="date-title-home"> {{ item.pubDate | date }}</div><h2>{{ item.title }}</h2></div></a></div>{% endfor %}</div>
